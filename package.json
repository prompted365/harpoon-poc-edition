{
  "name": "harpoon-v2",
  "version": "2.0.0",
  "description": "Harpoon v2 - Next-gen AI orchestration with Cloudflare Workers AI, Groq, and OpenAI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "build": "vite build && npm run copy-static",
    "copy-static": "mkdir -p dist/static && cp public/styles.css dist/static/ && cp public/app.js dist/static/",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name harpoon-v2 --commit-dirty=true",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000/api/health"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "agents": "^0.2.31",
    "hono": "^4.10.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251209.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
